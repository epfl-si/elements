{
  "name": "epfl-elements",
  "version": "3.0.0",
  "license": "MIT",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:epfl-si/elements.git"
  },
  "scripts": {
    "start": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "test": "bash -c ' set -e -x; node scripts/make_backstop_json.js \"$@\"; backstop test --config=build/backstop.json \"$@\" ' --",
    "test:reference": "backstop reference --config=build/backstop.json",
    "test:approve": "backstop approve  --config=build/backstop.json",
    "test:report": "backstop openReport --config=build/backstop.json",
    "test:info": "node scripts/backstop_status.js",
    "clean": "rm -rf build/ dist/",
    "realclean": "rm -rf build/ dist/ node_modules/"
  },
  "browserslist": [
    "> 1% in CH",
    "last 2 versions"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "arrow-body-style": 0,
      "camelcase": 0,
      "global-require": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "semi": 0,
      "comma-dangle": 0,
      "quotes": 0,
      "no-multi-spaces": 0,
      "space-before-function-paren": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "one-var": 0,
      "padded-blocks": 0,
      "object-property-newline": 0,
      "import/prefer-default-export": 0,
      "max-classes-per-file": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "[uU]nused"
        }
      ],
      "no-restricted-syntax": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-continue": 0
    }
  },
  "stylelint": {
    "ignoreFiles": [
      "assets/components/base.scss",
      "assets/config/bootstrap.scss",
      "assets/config/bootstrap-variables.scss"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "selector-pseudo-element-colon-notation": "single",
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "declarations",
        "rules"
      ],
      "order/properties-order": [
        "content",
        "display",
        "flex",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "float",
        "width",
        "height",
        "margin",
        "padding",
        "background",
        "border",
        "font-familly",
        "font-size",
        "line-height",
        "font-weight",
        "font-style",
        "color",
        "transform",
        "transition"
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {}
}
