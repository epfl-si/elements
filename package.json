{
  "name": "epfl-elements",
  "version": "4.5.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:epfl-si/elements.git"
  },
  "scripts": {
    "start": "webpack --mode=development --watch",
    "dist": "webpack --mode=production",
    "build": "yarn dist",
    "test:prepare": "bash -c ' set -e -x; install -d build; node scripts/make_backstop_json.js \"$@\" ' --",
    "test:reference": "backstop reference --config=build/backstop.json",
    "test:changes": "bash -c ' backstop test --config=build/backstop.json \"$@\" ' --",
    "test:approve": "backstop approve  --config=build/backstop.json",
    "test:report": "backstop openReport --config=build/backstop.json",
    "test:info": "node scripts/backstop_status.js",
    "release": "release-it",
    "lint": "eslint .",
    "stylelint": "stylelint '**/*.scss'",
    "clean": "rm -rf build/ dist/",
    "realclean": "rm -rf build/ dist/ node_modules/"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "sh ./scripts/ensure-branch.sh dev",
        "git pull --rebase --autostash"
      ]
    }
  },
  "files": [
    "dist/**",
    "assets/config/colors.json",
    "assets/config/social-colors.scss",
    "assets/config/variables.scss",
    "assets/config/bootstrap-variables.scss"
  ],
  "main": "dist/js/elements.min.js",
  "browserslist": [
    "> 1% in CH",
    "last 2 versions"
  ],
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      }
    },
    "ignorePatterns": [
      "build/",
      "dist/"
    ],
    "extends": [
      "airbnb"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "arrow-body-style": 0,
      "camelcase": 0,
      "global-require": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "semi": 0,
      "comma-dangle": 0,
      "quotes": 0,
      "no-multi-spaces": 0,
      "space-before-function-paren": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "one-var": 0,
      "padded-blocks": 0,
      "object-property-newline": 0,
      "import/prefer-default-export": 0,
      "max-classes-per-file": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "[uU]nused"
        }
      ],
      "no-restricted-syntax": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-continue": 0
    }
  },
  "stylelint": {
    "ignoreFiles": [
      "assets/components/base.scss",
      "assets/config/bootstrap.scss",
      "assets/config/bootstrap-variables.scss"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "scss/at-extend-no-missing-placeholder": null,
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "selector-pseudo-element-colon-notation": "single",
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "declarations",
        "rules"
      ],
      "order/properties-order": [
        "content",
        "display",
        "flex",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "float",
        "width",
        "height",
        "margin",
        "padding",
        "background",
        "border",
        "font-familly",
        "font-size",
        "line-height",
        "font-weight",
        "font-style",
        "color",
        "transform",
        "transition"
      ]
    }
  },
  "dependencies": {
    "@selectize/selectize": "^0.13.6",
    "bootstrap": "^4.5.2",
    "clipboard": "^2.0.6",
    "cookieconsent": "^3.1.1",
    "feather-icons": "^4.29.0",
    "flickity": "2.2.2",
    "flickity-as-nav-for": "^2.0.1",
    "flickity-fullscreen": "^1.1.1",
    "imagesloaded": "^4.1.4",
    "intro.js": "^2.9.3",
    "jquery": "^3.6.0",
    "jquery-mousewheel": "^3.1.13",
    "multiple-select": "^1.5.2",
    "object-fit-images": "^3.2.4",
    "pickadate": "^3.6.4",
    "popper.js": "^1.16.1",
    "tablesaw": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "backstopjs": "^6.1.3",
    "browser-sync": "^2.29.1",
    "browser-sync-webpack-plugin": "^2.3.0",
    "colorable": "https://github.com/epfl-si/colorable",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "3",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "js-beautify": "^1.14.0",
    "mini-css-extract-plugin": "^2.1.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-css-collapse": "^4.1.0",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-markdown": "^6.0.2",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "redux": "4",
    "release-it": "^15.5.0",
    "sass": "^1.55.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "styled-components": "^5.3.0",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.5.0",
    "stylelint-webpack-plugin": "^4.1.1",
    "svg-spritemap-webpack-plugin": "^4.5.0",
    "twig-html-loader": "^0.1.9",
    "unminified-webpack-plugin": "^3.0.0",
    "walk-sync": "^3.0.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge-and-include-globally": "^2.3.4",
    "yaml-loader": "^0.8.0"
  }
}
