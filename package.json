{
  "name": "epfl-elements",
  "version": "2.26.1",
  "license": "MIT",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:epfl-si/elements.git"
  },
  "scripts": {
    "start": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "deploy": "toolbox build styleguide && toolbox deploy",
    "test": "backstop test",
    "test:reference": "backstop reference",
    "test:approve": "backstop approve",
    "test:report": "backstop openReport",
    "test:update_config": "node scripts/backstop_config_updater.js",
    "test:info": "node scripts/backstop_status.js",
    "clean": "rm -rf build/ dist/",
    "realclean": "rm -rf build/ dist/ node_modules/"
  },
  "browserslist": [
    "> 1% in CH",
    "last 2 versions"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "arrow-body-style": 0,
      "camelcase": 0,
      "global-require": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "semi": 0,
      "comma-dangle": 0,
      "quotes": 0,
      "no-multi-spaces": 0,
      "space-before-function-paren": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "one-var": 0,
      "padded-blocks": 0,
      "object-property-newline": 0,
      "import/prefer-default-export": 0,
      "max-classes-per-file": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "[uU]nused"
        }
      ],
      "no-restricted-syntax": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-continue": 0
    }
  },
  "stylelint": {
    "ignoreFiles": [
      "assets/components/base.scss",
      "assets/config/bootstrap.scss",
      "assets/config/bootstrap-variables.scss"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-recommended-scss",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "no-descending-specificity": null,
      "selector-pseudo-element-colon-notation": "single",
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "declarations",
        "rules"
      ],
      "order/properties-order": [
        "content",
        "display",
        "flex",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "float",
        "width",
        "height",
        "margin",
        "padding",
        "background",
        "border",
        "font-familly",
        "font-size",
        "line-height",
        "font-weight",
        "font-style",
        "color",
        "transform",
        "transition"
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "clipboard": "^2.0.6",
    "cookieconsent": "^3.1.1",
    "feather-icons": "^4.28.0",
    "flickity": "2.2.1",
    "flickity-as-nav-for": "^2.0.1",
    "flickity-fullscreen": "^1.1.1",
    "imagesloaded": "^4.1.4",
    "intro.js": "^2.9.3",
    "jquery": "^3.6.0",
    "jquery-mousewheel": "^3.1.13",
    "multiple-select": "^1.5.2",
    "object-fit-images": "^3.2.4",
    "pickadate": "^3.6.4",
    "popper.js": "^1.16.1",
    "selectize.js": "^0.12.12",
    "tablesaw": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "backstopjs": "^5.0.1",
    "browser-sync": "^2.27.4",
    "browser-sync-webpack-plugin": "^2.3.0",
    "colorable": "https://github.com/epfl-si/colorable",
    "connected-react-router": "^6.9.1",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^5.2.6",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "history": "^4.7.2",
    "html-webpack-plugin": "^5.3.2",
    "immer": "^9.0.5",
    "js-beautify": "^1.14.0",
    "mini-css-extract-plugin": "^2.1.0",
    "nanoid": "^3.1.23",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-css-collapse": "^4.1.0",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-markdown": "^6.0.2",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-syntax-highlighter": "^15.4.3",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "styled-components": "^5.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.19.0",
    "svg-spritemap-webpack-plugin": "^4.0.3",
    "twig": "^1.15.4",
    "twig-html-loader": "^0.1.9",
    "walk-sync": "^3.0.0",
    "webpack": "^5.42.1",
    "webpack-cli": "^4.7.2",
    "webpack-merge-and-include-globally": "^2.3.4",
    "yaml": "^1.10.2",
    "yaml-loader": "^0.6.0"
  }
}
