{% if not id %}
  {% set id %}carouselExample{% endset %}
{% endif %}

<div id="{{id}}" class="carousel slide{% if extraClass %} {{extraClass}}{% endif %}" data-ride="carousel" data-interval="6000">
  <div class="carousel-inner">
    {% block slide %}{% endblock %}
  </div>

  <ol class="carousel-indicators">
    {% for i in 1..4 %}
    <li data-target="#{{id}}" data-slide-to="{{loop.index0}}" {% if loop.index0 == 0 %} class="active"{% endif %}></li>
    {% endfor %}
  </ol>

  <button role="button" class="carousel-control carousel-control-prev" role="button" data-slide="prev" data-target="#{{id}}">
    {% include "@atoms/icon/icon.twig" with { icon: 'icon-chevron-left' } %}
    <span class="sr-only">Previous</span>
  </button>
  <button role="button" class="carousel-control carousel-control-next" role="button" data-slide="next" data-target="#{{id}}">
    {% include "@atoms/icon/icon.twig" with { icon: 'icon-chevron-right' } %}
    <span class="sr-only">Next</span>
  </button>
</div>
