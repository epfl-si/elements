<ul class="nav nav-tabs" role="tablist">
  {% for day in restauration %}
    <li class="nav-item">
      <a class="nav-link {% if loop.first %}active{% endif %}" id="{{ day|lower }}-tab" data-toggle="tab" href="#{{ day|lower }}" role="tab" aria-controls="{{ day|lower }}" {% if loop.first %}aria-selected="true"{% endif %}>{{ day }}</a>
    </li>
  {% endfor %}
</ul>

<div class="tab-content py-3">
  {% for day in restauration %}
  <div class="tab-pane fade show {% if loop.first %}active{% endif %}" id="{{ day|lower }}" role="tabpanel" aria-labelledby="{{ day|lower }}-tab">
    <div class="row my-3">
      <div class="col-md-4">
        {% include '@atoms/select/select-multiple.twig' %}
      </div>
      <div class="col-md-4">
        {% include '@atoms/select/select-multiple.twig' %}
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="formControlRange">Score Nutrimenu minimum</label>
          <input type="range" id="nutrimenu-score" name="nutrimenu-score" class="form-control-range custom-range" min="1" max="13" step="1" value="10">
          <output for="nutrimenu-score" aria-hidden="true">B+</output>
        </div>
      </div>
      <div class="col-12 mb-2">
        {% include '@atoms/radio/radio-inline.twig' %}
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="tag-group mb-3">
          <label for="">Filtres de recherches</label>
          <div>
            <a href="javascript:void(0)" class="tag tag-plain">Tout effacer<span class="remove" tabindex="-1" title="Remove">×</span></a>
            <a href="javascript:void(0)" class="tag tag-primary">Campus Biotech Genève<span class="remove" tabindex="-1" title="Remove">×</span></a>
            <a href="javascript:void(0)" class="tag tag-primary">Fleur de Pains<span class="remove" tabindex="-1" title="Remove">×</span></a>
            <a href="javascript:void(0)" class="tag tag-primary">Food Truck<span class="remove" tabindex="-1" title="Remove">×</span></a>
          </div>
        </div>
      </div>
    </div>
    <div class="tablesaw-container">
      <table class="table table-restauration tablesaw tablesaw-stack" data-tablesaw-mode="stack">
        <thead class="sr-only">
          <tr>
            <th>Menu</th>
            <th>Restaurant</th>
            <th>Prix</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="menu">
              <div class="menu-content">
                <div class="logo float-left pr-3">
                  <img class="" src="./images/styleguide/restauration_illustration.png">
                </div>
                <div class="descr">
                  <b>Filets de perche (Estonie) sauce tartare</b><br>
                  Frites<br>
                  Salade mêlée
                </div>
                <div class="nutrimenu">
                  <img src="./images/styleguide/nutrimenu-score/nutrimenu-score-A.svg" alt="NutriMenu Score: A+" height="80">
                </div>
              </div>
            </td>
            <td class="restaurant">
              <a href="#">Cafétéria BC</a>
            </td>
            <td class="prices">
              <span class="price">
                <abbr title="Prix étudiant" class="text-primary">E</abbr> 11.90 CHF
              </span>
              <span class="price">
                <abbr title="Prix visiteurs" class="text-primary">V</abbr> 14.00 CHF
              </span>
              <span class="price">
                <abbr title="Prix doctorants" class="text-primary">D</abbr> 11.90 CHF
              </span>
              <span class="price">
                <abbr title="Prix campus" class="text-primary">C</abbr> 14.00 CHF
              </span>
            </td>
          </tr>
          <tr>
            <td class="menu">
              <div class="menu-content">
                <div class="logo float-left pr-3">
                  <img class="" src="./images/styleguide/restauration_illustration.png">
                </div>
                <div class="descr">
                <b>Galette</b><br>
              Thon, oignons, Fromage, Roquette<br>
                </div>
                <div class="nutrimenu">
                  <img src="./images/styleguide/nutrimenu-score/nutrimenu-score-B.svg" alt="NutriMenu Score: B" height="80">
                </div>
              </div>
            </td>
            <td class="restaurant">
              <a href="#">L'Esplanade</a>
            </td>
            <td class="prices">
              <span class="price">9.90 CHF</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  {% endfor %}
</div>
