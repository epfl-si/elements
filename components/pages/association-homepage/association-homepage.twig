{% set isSpecial = true %}

{% extends "@templates/base/base.twig" %}

{% block header %}
  {% include '@organisms/header/header-light.twig' with { site_title: 'Association title' } %}
{% endblock %}

{% block content %}
<div class="container-full">
  {% include '@organisms/hero/hero.twig' with {title: 'Association title', cover_path: 'images/styleguide/cover/cover01_', content: 'Welcome to our association homepage'} %}
</div>

<div class="container">
  {% include '@organisms/introduction/introduction.twig' with {title: 'Introduction', content: "This is an introduction text about the association. It's always interesting to know in few lines what is all about."} %}
</div>

<div class="container-full bg-gray-100 py-5 mt-5">
  <div class="container">
    <h2>The next events</h2>
    {% include '@organisms/card-slider/card-slider.twig' %}
  </div>
</div>

<div class="container">
  {% include '@content-types/news/news-latest-two.twig' %}
</div>

<div class="container-full bg-gray-100 py-5 mb-4 mt-6">
  <div class="container">
    <div class="mb-4 mt-4">
      <div class="row">
        <div class="col-md-6">
          {% include '@content-types/basic-page/basic-page.twig' %}
        </div>
        <div class="col-md-6">
          <h3 class="mb-4">Our sponsors</h3>
          {% include '@molecules/sponsor/sponsor.twig' %}
          {% include '@molecules/sponsor/sponsor.twig' %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <h2 class="mb-4">On social medias</h2>
  {% include '@organisms/social-feed-group/social-feed-group.twig' %}
</div>

<div class="container">
  <hr class="mb-5">
  {% include '@organisms/contact/contact-banner.twig' %}
</div>
{% endblock %}

{% block footer_container %}
<div class="bg-gray-100 pt-5">
  <div class="container">
    {% block footer %}
      {% include '@organisms/footer/footer-light.twig' %}
    {% endblock %}
  </div>
</div>
{% endblock %}
