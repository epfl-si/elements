{% extends "@templates/base/base.twig" %}

{% block content %}

<div class="container-full">
  <div class="hero">
    <div class="hero-content-container">
      <h1 class="hero-title">Campus</h1>
    </div>
    <div class="hero-img">
      <img src="images/styleguide/gallery/gallery_01.jpg" alt="IMAGE DESCRIPTION HERE" class="img-fluid">
    </div>
  </div>
</div>


<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      {% include '@content-types/basic-page/basic-page.twig' %}
    </div>
    <div class="col-md-4">
      {% include '@content-types/basic-page/basic-page.twig' %}
    </div>
    <div class="col-md-4">
      {% include '@molecules/links-group/links-group.twig' %}
    </div>
  </div>
</div>


<div class="container-full bg-gray-100 py-5 mt-5">
  <div class="overflow-hidden">
    <div class="container">
      <h2 class="mb-4 mt-4">The next events</h2>
      {% include '@organisms/card-slider/card-slider.twig' %}
    </div>
  </div>
</div>

<div class="container">
  {% include '@content-types/news/news-latest-two.twig' %}
</div>

<div class="container-full bg-gray-100 py-5 mt-5">
  <div class="container">
    <h2 class="mb-4">Lausanne</h2>
    <div class="row">
      {% for i in 1..3 %}
        <div class="col-md-4">
          {% include '@content-types/basic-page/basic-page.twig' %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<div class="container-full bg-gray-100 py-5 mt-5">
  <div class="container">
    <h2 class="mb-4 mt-4">Key numbers</h2>
  </div>
  {% include '@organisms/key-number-group/key-number-group.twig' %}
</div>

<div class="container-full bg-gray-100 py-5 mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        {% include '@content-types/basic-page/basic-page.twig' %}
      </div>
      <div class="col-md-6">
        {% include '@molecules/links-group/links-group.twig' %}
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  {% include '@organisms/contact/contact-banner.twig' %}
</div>


{% endblock %}
