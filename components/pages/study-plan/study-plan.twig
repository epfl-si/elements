{% block content %}

<div class="container-full px-5 px-xxl-6 mt-5">
  <header class="page-header d-xl-flex justify-content-xl-between align-items-xl-center mb-5">
    <h2 class="mb-4 mb-xl-0">Plan d'études – Cycle Bachelor</h2>
    <button class="btn btn-sm btn-secondary">
    {% include '@atoms/icon/icon.twig' with { icon: 'download', icon_classes:'feather' } %}
    Télécharger le plan d'étude (PDF)
  </button>
  </header>
  {% include '@content-types/study-plan/study-plan-bachelor.twig' %}
</div>

{% endblock %}

{% block footer_container %}
<div class="bg-gray-100 pt-5">
